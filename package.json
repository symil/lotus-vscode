{
    "name": "vscode-lotus",
    "displayName": "vscode-lotus",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.61.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "lotus",
            "aliases": ["Lotus", "lotus"],
            "extensions": [".lt"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "lotus",
            "scopeName": "source.lotus",
            "path": "./syntaxes/lotus.tmLanguage.json"
        }],
        "iconThemes": [{
            "id": "lotus",
            "label": "Lotus",
            "path": "./fileicons/lotus-icon-theme.json"
        }],
        "configuration": {
            "type": "object",
            "title": "Lotus",
            "properties": {
                "lotus.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "lotus.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "activationEvents": [
        "onLanguage:lotus"
    ],
    "main": "./client/out/extension",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "lint": "eslint ./client/src --ext .ts,.tsx",
        "postinstall": "cd client && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh"
    },
    "devDependencies": {
        "@types/mocha": "^8.2.2",
        "@types/node": "^12.12.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "mocha": "^8.3.2",
        "typescript": "^4.4.3"
    }
}